<?xml version="1.0" encoding="UTF-8"?>
<openfluid>
  <waresdev>
    <filetypes>

      <filetype name="cpp" icon=":/ui/common/icons/cpp.png">
        <extensions>*.c++;*.cxx;*.cpp;*.cc;*.C;*.moc;*.c</extensions>
        <edition internal="yes">
          <highlighting specsfile="cpp.syntaxhl.ofdev.xml" />
          <completion specsfile="cpp.comp.ofdev.xml" />
        </edition>
      </filetype>
      
      <filetype name="hpp" icon=":/ui/common/icons/hpp.png">
        <extensions>*.h;*.hh;*.H;*.h++;*.hxx;*.hpp;*.hcc</extensions>
        <edition internal="yes">
          <highlighting specsfile="cpp.syntaxhl.ofdev.xml" />
          <completion specsfile="cpp.comp.ofdev.xml" />
        </edition>
      </filetype>

      <filetype name="cmakelists" icon=":/ui/common/icons/cmakelists.png">
        <extensions>CMakeLists.txt</extensions>
        <edition internal="yes">
          <highlighting specsfile="cmake.syntaxhl.ofdev.xml" />
        </edition>
      </filetype>
      
      <filetype name="cmake" icon=":/ui/common/icons/cmake.png">
        <extensions>CMake.in.config;*.cmake</extensions>
        <edition internal="yes">
          <highlighting specsfile="cmake.syntaxhl.ofdev.xml" />
        </edition>
      </filetype>
      
      <filetype name="fortran" icon=":/ui/common/icons/fortran.png">
        <extensions>*.f;*.F;*.for;*.FOR;*.f90;*.F90;*.fpp;*.FPP;*.f95;*.F95</extensions>
        <edition internal="no">
          <highlighting specsfile="fortran.syntaxhl.ofdev.xml" />
        </edition>
      </filetype>
      
      <filetype name="latex">
        <extensions>*.tex;*.ltx;*.dtx;*.sty;*.cls;*.bbx;*.cbx;*.lbx;*.bib</extensions>
        <edition internal="no">
          <highlighting specsfile="latex.syntaxhl.ofdev.xml" />
        </edition>
      </filetype>
      
      <filetype name="image">
        <extensions>*.png;*.jpg;*.tif</extensions>
        <edition internal="no" />
      </filetype>
      
      <filetype name="qt-ui" icon=":/ui/common/icons/qt-ui.png">
        <extensions>*.ui</extensions>
        <edition internal="no" />
      </filetype>
      
      <filetype name="wareshub" icon=":/ui/common/icons/wareshub.png">
        <extensions>wareshub.json</extensions>
        <edition internal="no" />
      </filetype> 

    </filetypes>    
  </waresdev>
</openfluid>


        

