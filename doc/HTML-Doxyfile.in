GENERATE_HTMLHELP      = NO
GENERATE_RTF           = NO
GENERATE_XML           = NO
SEARCHENGINE           = NO
PDF_HYPERLINKS         = NO
USE_PDFLATEX           = NO
STRIP_CODE_COMMENTS    = NO

HTML_FILE_EXTENSION    = .html
HTML_HEADER            = @DOC_LAYOUT_DIR@/header.html
HTML_FOOTER            = @DOC_LAYOUT_DIR@/footer.html
HTML_EXTRA_STYLESHEET  = @DOC_LAYOUT_DIR@/stylesheet.css
HTML_STYLESHEET        = @DOC_LAYOUT_DIR@/stylesheet.css
HTML_OUTPUT            = html

SEARCHENGINE		   = YES
SERVER_BASED_SEARCH    = NO

QUIET                  = YES
