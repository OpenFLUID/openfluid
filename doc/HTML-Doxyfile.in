OUTPUT_DIRECTORY       = @MAIN_DOC_OUTPUT_PATH@

FULL_PATH_NAMES        = YES
STRIP_FROM_PATH        = @DOC_SOURCES_DIR@
STRIP_FROM_INC_PATH    = @DOC_SOURCES_DIR@


EXTRACT_ALL            = YES
EXTRACT_PRIVATE        = NO
EXTRACT_STATIC         = YES
EXTRACT_LOCAL_CLASSES  = YES
